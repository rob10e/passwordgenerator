{
  "parser": "babel-eslint",
  "extends": "eslint-config-airbnb",
  "rules": {
    "import/extensions": 0,
    "import/no-extraneous-dependencies": 0,
    "import/no-unresolved": [2, { "ignore": ["electron"] }],
    "linebreak-style": 0,
    "no-plusplus": 0,
    "no-mixed-operators": 0
  },
  "globals": {
    "document": true,
    "require()": true
  },
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  }
}
